<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @currency.name %>
</p>

<p>
  <b>Code:</b>
  <%= @currency.code %>
</p>

<p>
  <b>Status:</b>
  <%= @currency.collected? ? 'Collected' : 'Not Collected' %>
</p>

<p>
  <b>Met in following countries:</b>
  <% if @currency.countries.any? %>
    <br>
    <% @currency.countries.each do |c| %>
      <%= link_to(c.name, c) %><br>
    <% end %>
  <% else %>
    None
  <% end %>
</p>

<%= link_to 'Back', currencies_path %>